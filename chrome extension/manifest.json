{
    "manifest_version": 3,
    "name": "miniPodcast",
    "version": "0.1",
    "description": "Summarizes the webpage and converts it to a podcast.",
    "permissions": ["activeTab", "scripting", "tabs"],
    "action": {
      "default_popup": "index.html"
    },
    "host_permissions": [
      "*://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
